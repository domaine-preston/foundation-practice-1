{% comment %}
  Renders a cart drawer dialog base with cart-drawer content inside it
{% endcomment %}

{% capture attributes %}
  style="--dmn-dialog-header-height: 50px;"
{% endcapture %}

{%- capture color_scheme -%}
  {% render '@color-scheme', color_scheme: settings.cart_color_scheme %}
{%- endcapture -%}

{%- capture parent_class -%}
  cart-drawer-dialog {{ color_scheme }}
{%- endcapture -%}

{%- liquid
  capture content
    render 'cart-drawer'
  endcapture

  assign title = 'sections.cart.title' | t
  render 'modal-dialog', id: 'cart-drawer-dialog', anchor: 'right', content: content, type: 'modal', close_on_backdrop_click: true, title: title, attributes: attributes, parent_class: parent_class
-%}
