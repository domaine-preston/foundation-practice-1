{% comment %}
  Renders a set of links for paginated results. Must be used within paginate tags.

  Usage:
  {% paginate results by 2 %}
    {% render 'pagination', paginate: paginate, anchor: '#yourID' %}
  {% endpaginate %}

  Accepts:
  - paginate: {Object}
  - anchor: {String} (optional) This can be added so that on page reload it takes you to wherever you've placed your anchor tag.
{% endcomment %}

{%- if paginate.parts.size > 0 -%}
  <nav class='h6' role='navigation' aria-label='{{ 'general.pagination.label' | t }}'>
    <ul class='flex items-center justify-center list-none [&_li+li]:-ml-[1px]' role='list'>
      {%- if paginate.previous -%}
        <li class='list-none rotate-90'>
          <a
            href='{{ paginate.previous.url }}{{ anchor }}'
            class='inline-flex items-center justify-center size-[40px] border'
            aria-label='{{ 'general.pagination.previous' | t }}'
          >
            {%- render 'icon' with 'icon-caret' -%}
          </a>
        </li>
      {%- endif -%}

      {%- for part in paginate.parts -%}
        <li class='list-none'>
          {%- if part.is_link -%}
            <a
              href='{{ part.url }}{{ anchor }}'
              class='inline-flex items-center justify-center size-[40px] border'
              aria-label='{{ 'general.pagination.page' | t: number: part.title }}'
            >
              {{- part.title -}}
            </a>
          {%- else -%}
            {%- if part.title == paginate.current_page -%}
              <a
                role='link'
                aria-disabled='true'
                class='bg-(--button-primary-bg) text-(--button-primary-color) border-black inline-flex items-center justify-center size-[40px] border'
                aria-current='page'
                aria-label='{{ 'general.pagination.page' | t: number: part.title }}'
              >
                {{- part.title -}}
              </a>
            {%- else -%}
              <span class='inline-flex items-center justify-center size-[40px] border'>{{ part.title }}</span>
            {%- endif -%}
          {%- endif -%}
        </li>
      {%- endfor -%}

      {%- if paginate.next -%}
        <li class='list-none -rotate-90'>
          <a
            href='{{ paginate.next.url }}{{ anchor }}'
            class='inline-flex items-center justify-center size-[40px] border'
            aria-label='{{ 'general.pagination.next' | t }}'
          >
            {%- render 'icon' with 'icon-caret' -%}
          </a>
        </li>
      {%- endif -%}
    </ul>
  </nav>
{%- endif -%}
