{% doc %}
  Returns a Tailwind width token class based on the provided numeric `value` and optional `media` argument.

  @param {number} value - The numeric value to convert to a width token.
  @param {string} [media] - Optional media prefix (e.g. 'md', 'lg').

  @example
  {% render '@width-token', value: 4 %}           => w-md
  {% render '@width-token', value: 4, media: 'md' %} => md:w-md
{% enddoc %}
{%- liquid
  case value
    when 0
      if media == 'md'
        echo 'md:w-0'
      elsif media == 'lg'
        echo 'lg:w-0'
      else
        echo 'w-0'
      endif
    when 1
      if media == 'md'
        echo 'md:w-2xs'
      elsif media == 'lg'
        echo 'lg:w-2xs'
      else
        echo 'w-2xs'
      endif
    when 2
      if media == 'md'
        echo 'md:w-xs'
      elsif media == 'lg'
        echo 'lg:w-xs'
      else
        echo 'w-xs'
      endif
    when 3
      if media == 'md'
        echo 'md:w-sm'
      elsif media == 'lg'
        echo 'lg:w-sm'
      else
        echo 'w-sm'
      endif
    when 4
      if media == 'md'
        echo 'md:w-md'
      elsif media == 'lg'
        echo 'lg:w-md'
      else
        echo 'w-md'
      endif
    when 5
      if media == 'md'
        echo 'md:w-lg'
      elsif media == 'lg'
        echo 'lg:w-lg'
      else
        echo 'w-lg'
      endif
    when 6
      if media == 'md'
        echo 'md:w-xl'
      elsif media == 'lg'
        echo 'lg:w-xl'
      else
        echo 'w-xl'
      endif
    when 7
      if media == 'md'
        echo 'md:w-2xl'
      elsif media == 'lg'
        echo 'lg:w-2xl'
      else
        echo 'w-2xl'
      endif
    when 8
      if media == 'md'
        echo 'md:w-3xl'
      elsif media == 'lg'
        echo 'lg:w-3xl'
      else
        echo 'w-3xl'
      endif
  endcase
-%}
