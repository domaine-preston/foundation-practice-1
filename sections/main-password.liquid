{%- if section.settings.show_password_form -%}
  <div class='grid place-content-center place-items-center h-dvh bg-background-secondary'>
    {%- form 'storefront_password',
      class: 'text-center shadow-sm bg-background p-md w-full max-w-md grid grid-cols-1 gap-y-xs rounded-xs'
    -%}
      <h1 class='h6'>{{ 'general.password_page.login_form_heading' | t }}</h1>
      {%- render 'form-errors', form: form -%}
      {%- render 'form-field',
        kind: 'input',
        name: 'password',
        id: 'password',
        required: true,
        help_text: 'Password to access the store',
        label: 'Password',
        error: form.errors
      -%}

      <button name='commit' class='btn' variant='primary'>
        {{ 'general.password_page.login_form_submit' | t }}
      </button>
      <small class='password__footer-text'>{{ 'general.password_page.admin_link_html' | t }}</small>
    {%- endform -%}
  </div>
{%- endif -%}

{% schema %}
{
  "name": "t:sections.main-password.name",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_password_form",
      "default": true,
      "label": "t:sections.main-password.settings.show_password_form.label",
      "info": "t:sections.main-password.settings.show_password_form.info"
    }
  ]
}
{% endschema %}
