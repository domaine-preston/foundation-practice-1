{% capture queries_and_collections %}
<div class='grid gap-sm'>
  <h2 class='mx-pagegutter border-b border-b-border-01 pb-xs h5' id='predictive-search-queries'>
    {{- 'general.search.suggestions' | t -}}
  </h2>
  <ul
    class='grid gap-xs'
    id='predictive-search-results-queries-list'
    role='group'
    aria-labelledby='predictive-search-queries'
  >
    {%- for query in predictive_search.resources.queries -%}
      <li
        class="aria-selected:bg-background"
        id='predictive-search-option-query-{{ forloop.index }}'
        role='option'
        aria-selected='false'
      >
        <a class='block px-pagegutter' href='{{ query.url }}' tabindex='-1'>
          <div>
            <p
              aria-label='{{ query.text }}'
            >
              {{ query.styled_text }}
            </p>
          </div>
        </a>
      </li>
    {%- endfor -%}
    {%- for collection in predictive_search.resources.collections -%}
      <li
        class="aria-selected:bg-background"
        id='predictive-search-option-collection-{{ forloop.index }}'
        role='option'
        aria-selected='false'
      >
        <a class='block px-pagegutter' href='{{ collection.url }}' tabindex='-1'>
          <div>
            <p>{{ collection.title | escape }}</p>
          </div>
        </a>
      </li>
    {%- endfor -%}
  </ul>
</div>
{% endcapture %}

{% capture products %}
  <div class='grid gap-sm has-[ul:empty]:hidden'>
  <h2
    class='mx-pagegutter border-b border-b-border-01 pb-xs h5'
    id='predictive-search-products'
  >
    {{- 'general.search.products' | t -}}
  </h2>
  <ul
    class='grid gap-xs'
    id='predictive-search-results-products-list'
    role='group'
    aria-labelledby='predictive-search-products'
  >
    {%- for product in predictive_search.resources.products -%}
      <li
        class="aria-selected:bg-background"
        id='predictive-search-option-product-{{ forloop.index }}'
        role='option'
        aria-selected='false'
      >
        <a
          class='grid grid-cols-[50px_1fr] items-center gap-xs px-pagegutter'
          href='{{ product.url }}'
          tabindex='-1'
        >
          {%- if product.featured_media != blank -%}
            <img
              src='{{ product.featured_media | image_url: width: 150 }}'
              alt='{{ product.featured_media.alt }}'
              width='50'
              height='{{ 50 | divided_by: product.featured_media.preview_image.aspect_ratio }}'
            >
          {%- endif -%}
          <div>
            <p>{{ product.title | escape }}</p>

            {% render 'price', product: product, use_variant: product.selected_or_first_available_variant, show_badges: false %}
          </div>
        </a>
      </li>
    {%- endfor -%}
  </ul>
</div>
{% endcapture %}

{% capture pages %}
<div class='grid gap-sm'>
  <h2
    class='mx-pagegutter border-b border-b-border-01 pb-xs h5'
    id='predictive-search-pages-mobile'
  >
    {{- 'general.search.pages' | t -}}
  </h2>
  <ul
    class='grid gap-xs'
    id='predictive-search-results-pages-list-mobile'
    role='group'
    aria-labelledby='predictive-search-pages-mobile'
  >
    {%- for page in predictive_search.resources.pages -%}
      <li
        class="aria-selected:bg-background"
        id='predictive-search-option-page-{{ forloop.index }}'
        role='option'
        aria-selected='false'
      >
        <a class='block px-pagegutter' href='{{ page.url }}' tabindex='-1'>
          <div>
            <p>{{ page.title | escape }}</p>
          </div>
        </a>
      </li>
    {%- endfor -%}
    {%- for article in predictive_search.resources.articles -%}
      <li
        class="aria-selected:bg-background"
        id='predictive-search-option-article-{{ forloop.index }}'
        role='option'
        aria-selected='false'
      >
        <a href='{{ article.url }}' tabindex='-1'>
          <div>
            <p>{{ article.title | escape }}</p>
          </div>
        </a>
      </li>
    {%- endfor -%}
  </ul>
</div>
{% endcapture %}

{%- if predictive_search.performed -%}
  {% assign results_size = predictive_search.resources.queries.size
    | plus: predictive_search.resources.collections.size
    | plus: predictive_search.resources.pages.size
    | plus: predictive_search.resources.articles.size
    | plus: predictive_search.resources.products.size
  %}

  <div id='predictive-search-results' role='listbox' section-id='predictive-search'>
    {%- if results_size -%}
      <div
        class='grid gap-sm md:flex md:pt-sm'
        id='predictive-search-results-groups-wrapper'
      >
        <div class='flex flex-col gap-md empty:hidden md:basis-50'>
          {%- if predictive_search.resources.queries.size > 0 or predictive_search.resources.collections.size > 0 -%}
            {{ queries_and_collections }}
          {%- endif -%}

          {%- if predictive_search.resources.articles.size > 0 or predictive_search.resources.pages.size > 0 -%}
            <div class='hidden md:block'>
              {{ pages }}
            </div>
          {%- endif -%}
        </div>

        {%- if predictive_search.resources.products.size -%}
          <div class='md:flex-1'>
            {{ products }}
          </div>
        {%- endif -%}

        {%- if predictive_search.resources.articles.size > 0 or predictive_search.resources.pages.size > 0 -%}
          <div class='md:hidden'>
            {{ pages }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class='mx-pagegutter' id='predictive-search-option-search-keywords'>
      <button
        tabindex='-1'
        role='option'
        class='flex w-full items-center justify-between py-pagegutter utility aria-selected:bg-background'
        aria-selected='false'
        data-predictive-search-item
      >
        <span data-predictive-search-search-for-text>
          {{- 'general.search.search_for' | t: terms: predictive_search.terms -}}
        </span>
        {% render 'icon', icon: 'icon-arrow', size: 18 %}
      </button>
    </div>
  </div>

  <span class='hidden' data-predictive-search-live-region-count-value>
    {% liquid
      if results_size == 0
        echo 'general.search.no_results' | t: terms: predictive_search.terms
      else
        echo 'general.search.results_with_count' | t: count: results_size | append: ': '
        if predictive_search.resources.queries.size > 0
          assign count = predictive_search.resources.queries.size | plus: predictive_search.resources.collections.size
          echo 'general.search.results_suggestions_with_count' | t: count: count | append: ', '
        endif
        if predictive_search.resources.pages.size > 0
          assign count = predictive_search.resources.pages.size | plus: predictive_search.resources.articles.size
          echo 'general.search.results_pages_with_count' | t: count: count | append: ', '
        endif
        if predictive_search.resources.products.size > 0
          echo 'general.search.results_products_with_count' | t: count: predictive_search.resources.products.size
        endif
      endif
    %}
  </span>
{%- endif -%}
