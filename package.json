{
  "name": "@meetdomaine/project-syrah",
  "type": "module",
  "packageManager": "npm@10.0.0",
  "version": "2.0.0",
  "description": "",
  "private": true,
  "main": "index.js",
  "scripts": {
    "kill-port": "kill -9 $(lsof -t -i:9292)",
    "dev": "npx turbo theme:shopify theme:assets",
    "prepackage": "npm run build",
    "package": "npx shopify theme package",
    "theme:shopify:initial-push": "npx shopify theme push -e dev",
    "theme:shopify:initial-push-w": "npx shopify theme push -e dev",
    "theme:shopify": "npx shopify theme dev -e dev",
    "theme:assets": "vite",
    "build": "vite build",
    "lint:theme": "npx shopify theme check --fail-level=error",
    "lint:js": "npx eslint --ext .js,.ts,.jsx,.tsx src",
    "typecheck": "npx tsc --noEmit",
    "format": "npx prettier --write \"src/**/*.{js,ts,jsx,tsx,css,html}\" \"**/*.liquid\"",
    "prepare": "husky",
    "shopify": "shopify",
    "json:lint": "jsonlint ./locales/en.default.schema.json -q; jsonlint ./locales/en.default.json -q",
    "validate:design-manifest": "npx ajv validate -s node_modules/@meetdomaine/tailwind-syrah/schemas/07-2024.json -d design.manifest.json --errors=text --all-errors",
    "test": "npx vitest run",
    "test:watch": "npx vitest watch"
  },
  "keywords": [],
  "author": "",
  "license": "See LICENSE file",
  "devDependencies": {
    "@by-association-only/vite-plugin-shopify-clean": "^2.2.0",
    "@meetdomaine/project-syrah-config": "1.0.5",
    "@meetdomaine/tailwind-syrah": "^2.1.3",
    "@shopify/prettier-plugin-liquid": "1.9.3",
    "@spiriit/vite-plugin-svg-spritemap": "4.0.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/vite": "^4.1.8",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/defer-promise": "^1.0.4",
    "@types/vimeo__player": "^2.18.3",
    "@types/youtube-player": "^5.5.11",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "ajv-cli": "^5.0.0",
    "eslint": "^8.57.0",
    "glob": "^10.3.12",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "jsonlint": "^1.6.3",
    "lint-staged": "^16.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4.1.8",
    "turbo": "^2.5.4",
    "typescript": "5.4.5",
    "vite": "6.2.2",
    "vite-plugin-shopify": "4.0.0",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.5",
    "@lit-labs/observers": "^2.0.2",
    "@lit/context": "^1.1.1",
    "@lit/task": "^1.0.0",
    "@shopify/cli": "3.85.4",
    "@types/dom-view-transitions": "^1.0.4",
    "@vimeo/player": "^2.29.0",
    "construct-style-sheets-polyfill": "^3.1.0",
    "defer-promise": "^3.0.0",
    "element-internals-polyfill": "^1.3.11",
    "lit": "3.1.3",
    "swiper": "^11.1.3",
    "youtube-player": "^5.6.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.liquid": [
      "prettier --write"
    ],
    "*.{json,css,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
